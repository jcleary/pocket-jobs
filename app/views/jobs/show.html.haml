.container
  .row
    - User.children.each do |child|
      .col-md-4
        .card.mb-4.shadow-sm
          .card-header
            %h4.my-0.font-weight-normal=child.name
          .list-group.list-group
            .list-group-item
              .progress
                .progress-bar.progress-bar-striped{ role: "progressbar", style: "width: #{child.percent_completed}%"}
              %div
                #{child.jobs_completed} out of #{child.target_jobs} 
            - child.jobs.unpaid.each do |job|
              .list-group-item.d-flex.justify-content-between.align-items-center
                = job.job_type.name
                %span.badge.badge-primary.badge-pill 1
            .list-group-item
              - @job = Job.new
              = form_for(@job) do |f|
                .form-group
                  %label{ for: "job_type" }Add a job
                  = f.collection_select :job_type_id, JobType.all, :id, :name, { }, { class: 'form-control' } 
                  = f.hidden_field :user_id, value: child.id
                  %button.btn.btn-primary{ type: "submit" }Submit





